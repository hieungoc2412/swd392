@model CandidateManagement.Web.Models.CandidateViewModel
@{
    ViewBag.Title = "Cập nhật ứng viên";
}

<h1 class="h3 mb-4">Cập nhật ứng viên</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="CandidateId" />
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    @Html.Partial("_CandidateForm", Model)

    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary" asp-action="Index">Huỷ</a>
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

