@model CandidateManagement.Web.Models.CandidateViewModel
@{
    ViewBag.Title = "Xoá ứng viên";
}

<div class="alert alert-warning">
    <h4 class="alert-heading">Bạn chắc chắn muốn xoá?</h4>
    <p class="mb-0">Ứng viên: <strong>@Model.FullName</strong></p>
</div>

<dl class="row">
    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Trạng thái</dt>
    <dd class="col-sm-9"><span class="badge bg-secondary">@Model.Status</span></dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="CandidateId" />
    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary" asp-action="Index">Huỷ</a>
        <button type="submit" class="btn btn-danger">Xoá</button>
    </div>
</form>

