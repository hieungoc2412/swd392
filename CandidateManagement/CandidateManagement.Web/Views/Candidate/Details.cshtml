@model CandidateManagement.Web.Models.CandidateViewModel
@{
    ViewBag.Title = "Chi tiết ứng viên";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h2 class="h5 mb-0">@Model.FullName</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Điện thoại</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Kỹ năng</dt>
            <dd class="col-sm-9">@Model.Skills</dd>

            <dt class="col-sm-3">Kinh nghiệm</dt>
            <dd class="col-sm-9">@Model.Experience năm</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9"><span class="badge bg-secondary">@Model.Status</span></dd>

            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">CV</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.CvUrl))
                {
                    <a class="btn btn-sm btn-outline-info" href="@Model.CvUrl" target="_blank">Xem CV</a>
                }
                else
                {
                    <span class="text-muted">Chưa tải</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.CandidateId">Sửa</a>
    </div>
</div>

